{
  "name": "backend",
  "version": "0.0.0",
  "description": "backend server for twitter-clone",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start-dev": "nodemon",
    "dev": "concurrently --names \"server,eslint\" \"nodemon\" \"nodemon --exec npm run eslint\"",
    "prettierw": "prettier src/**/*.ts --write",
    "eslint": "eslint src/*.ts",
    "prisma-pull": "npx prisma db pull"
  },
  "author": "Peter Helle Hartmann",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "concurrently": "^7.5.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.20",
    "onchange": "^7.1.0",
    "prettier": "2.7.1",
    "prisma": "^4.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node --esm src/index.ts"
  }
}
